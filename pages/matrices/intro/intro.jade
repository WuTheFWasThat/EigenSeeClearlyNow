
extends ../../layout

block morehead
  include ../../includes/mathjax
  - var bodyClass = 'matrices-intro'

block content
  .row
    .col-md-6
      canvas#canvas.center

    - var options = {}
    - options.min = -100
    - options.max = 100
    - options.step = 10
    - options.matrix = {}
    - options.matrix.xx = 10
    - options.matrix.xy = 0
    - options.matrix.xz = 0
    - options.matrix.yx = 10
    - options.matrix.yy = 10
    - options.matrix.yz = 0
    - options.matrix.zx = 0
    - options.matrix.zy = 0
    - options.matrix.zz = 10

    .col-md-6
      +matrix_slider_input('matrixInput', options)
