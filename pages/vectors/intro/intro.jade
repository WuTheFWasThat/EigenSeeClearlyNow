extends ../../layout

block morehead
  - var bodyClass = 'vectors-intro'

block content
  .row
    .col-md-6
      canvas#canvas(style='width:100%;')

    - var options = {}
    - options.min = -100
    - options.max = 100
    - options.step = 10
    - options.vector = {}
    - options.vector.x = 50
    - options.vector.y = 50
    - options.vector.z = 0

    .col-md-6
      +vector_input('vectorInput', options)
