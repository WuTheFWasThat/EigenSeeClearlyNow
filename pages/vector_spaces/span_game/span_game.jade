extends ../../layout

block morehead
  include ../../includes/mathjax
  - var bodyClass = 'vector_spaces-span_game'

block content
  - var options = {}
  - options.min = -5
  - options.max = 5
  - options.step = 1
  - options.inline = true
  - options.wellStyle = 'margin-left: 5px;'

  h2.text-center Reach the target!

  h1.text-center $c_u \cdot \vec{u} + c_v \cdot \vec{v} + c_w \cdot \vec{w} = \vec{t}$

  hr

  .row(style='position:relative')
    .col-md-6
      canvas#canvas.center

    .col-md-6
      .row
        .col-md-6
          span $c_u = $
          - options.color = CONSTANTS.COLORS.RED
          +constant_input('coefficientU', options)
        .col-md-6
          p.basisEquation#uEquation

      .row
        .col-md-6
          span $c_v = $
          - options.color = CONSTANTS.COLORS.GREEN
          +constant_input('coefficientV', options)
        .col-md-6
          p.basisEquation#vEquation

      .row
        .col-md-6
          span $c_w = $
          - options.color = CONSTANTS.COLORS.BLUE
          +constant_input('coefficientW', options)
        .col-md-6
          p.basisEquation#wEquation

      .row
        h4#targetEquation.text-center

      hr

      #curEquationContainer.row
        p#curEquation

      hr
      .row.center
        .btn-group
          button.btn.btn-default#reset_game Reset
          button.btn.btn-default#reveal_hint Reveal Hint
      .row#hint.hidden
        p Try rotating the camera so that one basis vector lines up with the origin.  Then solve the problem in 2D!
