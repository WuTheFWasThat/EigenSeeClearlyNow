extends ../../layout

block morehead
  - var bodyClass = 'vector-addition'

block content
  .row(style='position:relative')
    .col-md-4
      canvas#canvasA.center(style='width:300px;height:300px')
    .col-md-1#plus
       div +
    .col-md-4
      canvas#canvasB.center(style='width:300px;height:300px')
    .col-md-1#equals
       div =
    .col-md-4
      canvas#canvasC.center(style='width:300px;height:300px')

   .row
      h4 Use arrow keys to rotate!

    - var min = -50
    - var max = 50
    - var step = 10

    - var xvalA = 25
    - var yvalA = 25
    - var zvalA = 25

    .col-md-4
      +slider_input('vectorA', min, max, step, xvalA, yvalA, zvalA)

    - var xvalB = 25
    - var yvalB = 25
    - var zvalB = -25

    .col-md-4
      +slider_input('vectorB', min, max, step, xvalA, yvalB, zvalB)

    - var xval = xvalA + xvalB
    - var yval = yvalA + zvalB
    - var zval = zvalA + zvalB

    .col-md-4
      +slider_input('vectorSum', 2 * min, 2 * max, step, xval, yval, zval, true)

block morefoot
  script.
    $(document).ready(function() {
      init_vector_addition();
    });
