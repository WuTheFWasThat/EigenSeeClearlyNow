extends ../../layout

block morehead
  - var bodyClass = 'vector-addition'

block content
  .row(style='position:relative')
    .col-md-4
      canvas#canvasA.center(style='width:300px;height:300px')
    .col-md-1#plus
       div +
    .col-md-4
      canvas#canvasB.center(style='width:300px;height:300px')
    .col-md-1#equals
       div =
    .col-md-4
      canvas#canvasC.center(style='width:300px;height:300px')

   .row
      h4 Use arrow keys to rotate!

    - var xvalA = 25
    - var yvalA = 25
    - var zvalA = 25

    - var xvalB = 25
    - var yvalB = 25
    - var zvalB = -25

    - var options = {}
    - options.min = -100
    - options.max = 100
    - options.step = 10

    - options.x = xvalA
    - options.y = yvalA
    - options.z = zvalA
    - options.color = 'FFFF66'

    .col-md-4
      +slider_input('vectorA', options)

    - options.x = xvalB
    - options.y = yvalB
    - options.z = zvalB
    - options.color = '6699FF'

    .col-md-4
      +slider_input('vectorB', options)

    - options.min = 2 * options.min
    - options.max = 2 * options.max
    - options.step = 2 * options.step
    - options.x = xvalA + xvalB
    - options.y = yvalA + yvalB
    - options.z = zvalA + zvalB
    - options.disabled = true
    - options.color = '99FF66'

    .col-md-4
      +slider_input('vectorSum', options)

block morefoot
  script.
    $(document).ready(function() {
      init_vector_addition();
    });
